<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PasswordCreationActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        android:fontFamily="@font/lato"
        android:text="Пропустить"
        android:textColor="@color/blue"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:fontFamily="@font/lato"
        android:text="Для защиты ваших персональных данных"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/sf_pro_display_heavy"
        android:text="Создайте пароль"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skip" />

    <LinearLayout
        android:id="@+id/pinCodeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:columnCount="3"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="1"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="2"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="3"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="4"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="5"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="6"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="7"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="8"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:text="9"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:layout_column="1"
            android:text="0"
            android:onClick="enterNumber"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/pin_button"
            android:backgroundTint="#00000000"
            android:text="l"
            android:onClick="removeNumber"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>