<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="@color/main_blue"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:centerX="0"
                android:centerY="1"
                android:startColor="@color/gradient_blue"
                android:endColor="#00000000" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:centerX="1"
                android:centerY="0"
                android:startColor="@color/gradient_blue"
                android:endColor="#00000000" />
        </shape>
    </item>
    <item>
            <bitmap
                android:src="@drawable/logo"
                android:gravity="center"/>
    </item>

</layer-list>